.titlebar
  %h1.pull-left Listing products
  = link_to 'New Product', new_product_path, :class => 'btn btn-success pull-right new-btn'

%hr

%table.table.table-striped.table-bordered
  %tr
    %th Name
    %th.action
    %th.action
    %th.action

  - @products.each do |product|
    %tr
      %td= product.name
      %td.action= link_to 'Show', product, :class => 'btn'
      %td.action= link_to 'Edit', edit_product_path(product), :class => 'btn btn-primary'
      %td.action= link_to 'Destroy', product, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-danger'

%br

