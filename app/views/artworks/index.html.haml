.titlebar
  %h1.pull-left Listing Artworks
  = link_to 'New Artwork', new_artwork_path, :class => 'btn btn-success pull-right new-btn'

%hr

= paginate @artworks

%table.table.table-striped.table-bordered
  %tr
    %th Size
    %th Product
    %th Artwork
    %th Platform
    %th.action
    %th.action

  - @artworks.each do |artwork|
    %tr
      %td= artwork.size
      %td= artwork.product.name
      %td= image_tag artwork.artwork.url if artwork.artwork?
      %td= artwork.platform
      %td.action= link_to 'Edit', edit_artwork_path(artwork)
      %td.action= link_to 'Destroy', artwork, :method => :delete, :data => { :confirm => 'Are you sure?' }

= paginate @artworks
